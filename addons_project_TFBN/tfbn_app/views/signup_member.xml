<odoo>
	<data>
		<template id="tfbn_app.signup" inherit_id="auth_signup.fields" name="Additional fields for TFBN member registration">
			<xpath expr="//div[@class='form-group field-name']" position="after">
				<div class="form-group field-name">
					<label for="company_name" class="control-label">Company</label>
					<input type="text" name="company_name" t-att-value="company_name" id="company_name" class="form-control" placeholder="e.g. The French Retailer Inc." required="required" t-att-readonly="'readonly' if only_passwords else None" t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
				</div>
				<div class="form-group field-name">
					<label for="function" class="control-label">Position</label>
					<input type="text" name="function" t-att-value="function" id="function" class="form-control" placeholder="e.g. CEO" required="required" t-att-readonly="'readonly' if only_passwords else None" t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
				</div>
			</xpath>
		</template>
	</data>
</odoo>

